      <li></li>
    </ul>
    <!-- To do list body -->
    <section class="vh-100 gradient-custom">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col col-xl-10">
            <div class="card">
              <div class="card-body p-5">
                <form
                  action="/submit"
                  method="post"
                  class="d-flex justify-content-center align-items-center mb-4"
                >
                  <div class="form-outline flex-fill">
                    <input
                      type="text"
                      id="form2"
                      name="newTask"
                      class="form-control"
                      placeholder="New Task..."
                    />
                  </div>
                  <button type="submit" class="btn btn-info ms-2">Add</button>
                </form>

                <!-- Tabs navs -->
                <ul class="nav nav-tabs mb-4 pb-2" id="ex1" role="tablist">
                  <li class="nav-item" role="presentation">
                    <button
                      class="nav-link active"
                      id="ex1-tab-1"
                      data-bs-toggle="tab"
                      href="#ex1-tabs-1"
                      role="tab"
                      aria-expanded="true"
                      aria-controls="ex1-tabs-1"
                      aria-selected="true"
                      >All</button
                    >
                  </li>
                  <li class="nav-item" role="presentation">
                    <button
                      class="nav-link"
                      id="ex1-tab-2"
                      data-bs-toggle="tab"
                      href="#ex1-tabs-2"
                      role="tab"
                      aria-expanded="false"
                      aria-controls="ex1-tabs-2"
                      aria-selected="false"
                      >Active</button
                    >
                  </li>
                  <li class="nav-item" role="presentation">
                    <button
                      class="nav-link"
                      id="ex1-tab-3"
                      data-bs-toggle="tab"
                      href="#ex1-tabs-3"
                      role="tab"
                      aria-expanded="false"
                      aria-controls="ex1-tabs-3"
                      aria-selected="false"
                      >Completed</button
                    >
                  </li>
                </ul>
                <!-- Tabs navs -->

                <!-- Tabs content -->
                <div class="tab-content" id="ex1-content">
                  <div
                    class="tab-pane fade show active"
                    id="ex1-tabs-1"
                    role="tabpanel"
                    aria-labelledby="ex1-tab-1"
                  >
                    <ul class="list-group all-tab mb-0">
                        <% if (locals.newTasks) { %>
                        <% for (let i=0; i<newTasks.length; i++) { %>
                        <li class="list-group-item d-flex align-items-center border-0 mb-2 rounded" style="background-color: #f4f6f7">
                          <input class="form-check-input me-2" type="checkbox" value="" aria-label="..." />
                          <label><%- newTasks[i] %></label>
                        </li>
                        <%}%>
    
                          <%}%>
                      <li
                        class="list-group-item d-flex align-items-center border-0 mb-2 rounded"
                        style="background-color: #f4f6f7"
                      >
                      <input
                          class="form-check-input me-2"
                          type="checkbox"
                          value="checked"
                          aria-label="..."
                          checked
                          onchange="form.submit()"
                          name="test"
                        />
                        <label>Cras justo odio</label>
                      </li>
                    </ul>
                  </div>
                  <div
                    class="tab-pane fade"
                    id="ex1-tabs-2"
                    role="tabpanel"
                    aria-labelledby="ex1-tab-2"
                  >
                    <ul class="list-group active-tab mb-0">
                      <li
                        class="list-group-item d-flex align-items-center border-0 mb-2 rounded"
                        style="background-color: #f4f6f7"
                      >
                        <input
                          class="form-check-input me-2"
                          type="checkbox"
                          value=""
                          aria-label="..."
                        />
                        Morbi leo risus
                      </li>
                      <li
                        class="list-group-item d-flex align-items-center border-0 mb-2 rounded"
                        style="background-color: #f4f6f7"
                      >
                        <input
                          class="form-check-input me-2"
                          type="checkbox"
                          value=""
                          aria-label="..."
                        />
                        Porta ac consectetur ac
                      </li>
                      <li
                        class="list-group-item d-flex align-items-center border-0 mb-0 rounded"
                        style="background-color: #f4f6f7"
                      >
                        <input
                          class="form-check-input me-2"
                          type="checkbox"
                          value=""
                          aria-label="..."
                        />
                        Vestibulum at eros
                      </li>
                    </ul>
                  </div>
                  <div
                    class="tab-pane fade"
                    id="ex1-tabs-3"
                    role="tabpanel"
                    aria-labelledby="ex1-tab-3"
                  >
                    <ul class="list-group completed-tab mb-0">
                      <li
                        class="list-group-item d-flex align-items-center border-0 mb-2 rounded"
                        style="background-color: #f4f6f7"
                      >
                        <input
                          class="form-check-input me-2"
                          type="checkbox"
                          value=""
                          aria-label="..."
                          checked
                        />
                        Cras justo odio
                      </li>
                      <li
                        class="list-group-item d-flex align-items-center border-0 mb-2 rounded"
                        style="background-color: #f4f6f7"
                      >
                        <input
                          class="form-check-input me-2"
                          type="checkbox"
                          value=""
                          aria-label="..."
                          checked
                        />
                        Dapibus ac facilisis in
                    </ul>
                  </div>
                </div>
                <!-- Tabs content -->
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
  <script src="client.js"></script>
  </body>
</html>
